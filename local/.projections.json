{
	"*": {"make": ["rake", "-f", "{project}/Rakefile"]},
	"src/*.cc": {"type": "code",
		"alternate": "src/{}.h" },
	"src/*.h": {"type": "header",
		"alternate": "src/{}.c"},
	"tests/test_*.cc": {"type": "unit",
		"alternate": "tests/test_{}.h" },
	"tests/test_*.h": {"type": "uheader",
		"alternate": "tests/test_{}.cc" },
	"tests/Makefile.am": { "type": "umake",
		"alternate": "src/Makefile.am" },
	"src/Makefile.am": {"type": "amcode",
		"alternate": "tests/Makefile.am" },
	"tests/*/Makefile.am": { "type": "amtest",
		"alternate": "src/Makefile.am" },
	"configure.ac": { "type": "aconf",
		"alternate": "Makefile.am" },
}
